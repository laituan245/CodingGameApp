extends ../layouts/default
block js
    script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.5/ace.js', type='text/javascript', charset='utf-8')
block js-footer
    script(src="/js/custom-logic/playgame.js")
block css
    style(type='text/css').
        #editor {
        position: absolute;
        top: 50px;
        right: 0;
        bottom: 0px;
        left: 400px;
        font-size: 20px;
        }

        #myCanvas{
            margin: 10px 10px 10px 10px;
            width: 380px;

        }
        .map-header, .instruction-header{
            width: 100%;
            font-size: 20px;
            text-align: center;
            background-color: rgba(39, 40, 34, 0.07);
        }

        .ranking-section, .run-container{
            
            margin-bottom: 10px;
        }

        #instruction{
            font-size: 17px;
            padding: 10px 10px 10px 10px;
        }

        div.fixed {
            min-height: 100px;
            position: fixed;
            z-index: 1000;
            top: 300px;
            left: 400px;
            width: 300px;
            border: 1px solid #e4e4e4;
            background-color: #fff  ;
            opacity: 0.6;
            filter: alpha(opacity=60); /* For IE8 and earlier */
        }

