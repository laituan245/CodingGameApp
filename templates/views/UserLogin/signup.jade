extends ../../layouts/default

block content
	.row.col-md-6.col-md-offset-3
		form.form-signin(action='/signup', method='post')
			h2.form-signin-heading Please sign up
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(name='username',type='email', placeholder='Email address', required='', autofocus='')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(name='passwd', type='password', placeholder='Password', required='')
			.checkbox
				label
					input(type='checkbox', value='remember-me')
					|  Remember me
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up