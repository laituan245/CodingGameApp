        script(src='/js/jquery-1.11.1.min.js')
        // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
        //if lt IE 9
            script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
            script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

        block css
        block js
        

    //- HTML BODY
    body

        //- HEADER
        nav.navbar.horizontal-menu.navbar-fixed-top
            .navbar-inner
                .navbar-brand
                    a.logo(href='/')
                        img.hidden-xs(src='/images/logo.png', width='50', alt='')
                        img.visible-xs(src='http://themes.laborator.co/xenon/assets/images/logo@2x.png', width='80', alt='')
                    a(href='#', data-toggle='settings-pane', data-animate='true')
                        i.linecons-cog
                .nav.navbar-mobile
                    .mobile-menu-toggle
                        a(href='#', data-toggle='settings-pane', data-animate='true')
                            i.linecons-cog
                        a(href='#', data-toggle='user-info-menu-horizontal')
                            i.fa-bell-o
                            span.badge.badge-success 7
                        a(href='#', data-toggle='mobile-menu-horizontal')
                            i.fa-bars
                .navbar-mobile-clear
                // main menu
                ul.navbar-nav
                    li.opened.active.has-sub
                        a(href='http://themes.laborator.co/xenon/layout/variants/')
                            i.linecons-desktop
                            span.title Layouts
                        ul
                            li
                                a(href='http://themes.laborator.co/xenon/layout/variants/')
                                    span.title Layout Variants & API
                            li.active
                                a(href='http://themes.laborator.co/xenon/layout/horizontal-menu/')
                                    span.title Horizontal Menu
                            
                ul.nav.nav-userinfo.navbar-right
                    li.search-form
                        form(method='get', action='http://themes.laborator.co/xenon/extra/search/')
                            input.form-control.search-field(type='text', name='s', placeholder='Type to search...')
                            button.btn.btn-link(type='submit')
                                i.linecons-search
                   
                    if (authenticated === true)

                        li.dropdown.user-profile
                            a(href='#', data-toggle='dropdown')
                                img.img-circle.img-inline.userpic-32(src='http://themes.laborator.co/xenon/assets/images/user-1.png', alt='user-image', width='28')
                                span
                                    | Arlind Nushi
                                    i.fa-angle-down
                            ul.dropdown-menu.user-profile-menu.list-unstyled
                                li
                                    a(href='#edit-profile')
                                        i.fa-edit
                                        | New Post
                                li.last
                                    a(href='http://themes.laborator.co/xenon/extra/lockscreen/')
                                        i.fa-lock
                                        | Logout
                    else
                        li
                            a(href='/login')
                                
                                i.fa.fa-sign-in.fa-2x
                                
                                span.title= " Login"
            

        .container.page-container
            block content
            


        script(src='/js/bootstrap.min.js')
        script(src='/js/TweenMax.min.js')
        script(src='/js/resizeable.js')
        script(src='/js/joinable.js')
        script(src='/js/xenon-api.js')
        script(src='/js/xenon-toggles.js')
        script(src='/js/toastr/toastr.min.js')
        script(src='/js/moment.min.js')

        script(src='/js/tagsinput/bootstrap-tagsinput.min.js')
